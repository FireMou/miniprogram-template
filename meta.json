{
  "prompts": {
    "name": {
      "type": "string",
      "required": true,
      "label": "Project name"
    },
    "description": {
      "type": "string",
      "required": true,
      "label": "Project description",
      "default": "A miniprogram project"
    },
    "author": {
      "type": "string",
      "label": "Author"
    },
    "appid": {
       "type": "string",
       "message": "Project Appid",
      "required": true,
       "default": "wx725bbd012cd345a4"
    },
    "component": {
       "type": "confirm",
       "message": "Use standard component?",
       "default": true
    }
  },
  "completeMessage": "{{#inPlace}}To get started:\n\n  npm install\n  npm run dev{{else}}To get started:\n\n  cd {{destDirName}}\n  npm install\n  npm run dev{{/inPlace}}"
}
